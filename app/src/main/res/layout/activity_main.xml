<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/temperature_in_celsius_and_fahrenheit"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tempTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/zero_value"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wind_speed"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/windTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/zero_value"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/cloudImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/cloud"
            android:scaleType="fitStart"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_launcher"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/standard_deviation_of_the_temperature"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sdevTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/zero_value"
            android:textSize="24sp" />

        <Button
            android:id="@+id/sdevButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calculate_standard_deviation" />

    </LinearLayout>
</layout>